{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prerelease": "yarn build",
    "precanary": "yarn build",
    "prebuild": "rm -rf ./packages/*/lib",
    "build": "yarn build:esm && yarn build:cjs && yarn module:esm",
    "build:cjs": "yarn module:cjs && tsc -b",
    "build:esm": "yarn module:esm && tsc -b",
    "module:cjs": "sed -i -e '0,/target/{s:esnext:es5:}' -e '0,/module/{s:esnext:commonjs:}' packages/tsconfig.build.json && sed -i -e s:lib/esm:lib/cjs: packages/**/tsconfig.json",
    "module:esm": "sed -i -e s:es5:esnext: -e s:commonjs:esnext: packages/tsconfig.build.json && sed -i -e s:lib/cjs:lib/esm: packages/**/tsconfig.json",
    "prepublishOnly": "yarn build",
    "changelog": "node ./tasks/changelog",
    "release": "lerna publish",
    "canary": "lerna publish --canary",
    "lint": "eslint packages/**/src/*.tsx --max-warnings 0",
    "storybook": "start-storybook -p 6006",
    "watch": "yarn module:esm && tsc -b -w",
    "build-storybook": "build-storybook",
    "cypress": "cypress open"
  },
  "eslintIgnore": [
    "node_modules",
    "lib"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  },
  "dependencies": {
    "@babel/core": "^7.4.3",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.4",
    "@typescript-eslint/eslint-plugin": "1.11.0",
    "@typescript-eslint/parser": "1.11.0",
    "babel-eslint": "10.0.2",
    "babel-loader": "^8.0.6",
    "cypress": "^3.4.0",
    "cypress-cucumber-preprocessor": "^1.13.0",
    "eslint": "5.x",
    "eslint-config-smashing-app": "0.4.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-cypress": "^2.6.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-flowtype": "2.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "1.5.0",
    "lerna": "3.14.1",
    "lerna-changelog": "0.8.2",
    "prop-types": "15.7.2",
    "react": "16.8.6",
    "react-docgen-typescript-loader": "^3.1.0",
    "react-dom": "16.8.6",
    "styled-components": "4.2.0",
    "typescript": "3.5.3",
    "webpack": "^4.29.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "5.2.0-beta.25",
    "@storybook/addon-actions": "5.2.0-beta.25",
    "@storybook/addon-docs": "5.2.0-beta.25",
    "@storybook/addon-knobs": "^5.2.0-beta.25",
    "@storybook/addon-links": "5.2.0-beta.25",
    "@storybook/addon-storysource": "^5.2.0-beta.25",
    "@storybook/addon-viewport": "^5.2.0-beta.25",
    "@storybook/addons": "5.2.0-beta.25",
    "@storybook/react": "5.2.0-beta.25",
    "@types/storybook__react": "4.0.2",
    "@types/styled-components": "4.1.18",
    "babel-preset-react-app": "^9.0.0"
  }
}
